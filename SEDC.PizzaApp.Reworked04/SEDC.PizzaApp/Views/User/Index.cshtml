@model List<UserViewModel>

<h1>Users:</h1>

<a asp-controller="User" asp-action="CreateUser"> Create User </a>

@foreach (var user in Model)
{
    <ul>
        <li>First Name: @user.FirstName</li>
        <li>Last Name: @user.LastName</li>
        <li>Address: @user.Address</li>
        
        <li><a asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id">Edit User</a></li>
        <li><a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id">Delete User</a></li>
    </ul>
}